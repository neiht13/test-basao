---
import '@/styles/globals.css';
import Navbar from '@/components/Navbar';
import Footer from '@/components/Footer';
import ChatbotWidget from '@/components/ChatbotWidget';

interface Props {
  title?: string;
  description?: string;
}

const { 
  title = "Trang thông tin tra cứu xã Ba Sao", 
  description = "Xã Ba Sao - Tỉnh Đồng Tháp" 
} = Astro.props;

// Fetch settings
let systemSettings = null;
try {
  // Check if we can fetch from local API (only works in server mode if internal) 
  // OR simpler: connect to DB directly since this is Astro Server.
  // Using direct DB import is better for SSR layout
  const { default: SystemSettings } = await import('@/models/SystemSettings');
  const { default: mongoose } = await import('mongoose');
  
  const MONGODB_URI = import.meta.env.MONGODB_URI || "mongodb://localhost:27017/xa-ba-sao-portal";
  if (mongoose.connection.readyState === 0) {
      await mongoose.connect(MONGODB_URI);
  }
  
  const settingsDoc = await SystemSettings.findOne();
  if (settingsDoc) {
      systemSettings = settingsDoc.toJSON();
  }
} catch (e) {
  console.error("Layout settings fetch error", e);
}

const finalTitle = systemSettings?.siteName ? `${title} | ${systemSettings.siteName}` : title;
const finalDesc = systemSettings?.siteDescription || description;
---

<!DOCTYPE html>
<html lang="vi">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={finalDesc} />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&display=swap" rel="stylesheet" />
    <title>{finalTitle}</title>
  </head>
  <body class="min-h-screen flex flex-col bg-background text-foreground font-sans">
    <Navbar client:load />
    <main class="flex-1">
      <slot />
    </main>
    <Footer />
    <ChatbotWidget client:idle />
  </body>
</html>
