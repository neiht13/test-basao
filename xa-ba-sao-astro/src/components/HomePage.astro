---
import { Search, Globe, Building2, Newspaper, Calendar, ShieldCheck, MapPin, LayoutGrid, Users, ArrowRight, Sparkles } from "lucide-react";
import { cn } from "@/lib/utils";
import { HAMLETS_DATA, type Hamlet } from "@/lib/data";

// Fetch hamlets from API/DB on the server
let hamlets: Hamlet[] = [];
try {
    // In Astro server-side, we can often just import from DB models directly
    // but for now let's use the provided API or the fallback data.
    // Since this is SSR, we can connect to Mongo if needed.
    const { default: HamletModel } = await import('@/models/Hamlet');
    const { default: mongoose } = await import('mongoose');
    
    const MONGODB_URI = import.meta.env.MONGODB_URI || "mongodb://localhost:27017/xa-ba-sao-portal";
    if (mongoose.connection.readyState === 0) {
        await mongoose.connect(MONGODB_URI);
    }
    
    const hamletsDoc = await HamletModel.find();
    if (hamletsDoc && hamletsDoc.length > 0) {
        hamlets = hamletsDoc.map(h => h.toJSON());
    } else {
        hamlets = HAMLETS_DATA;
    }
} catch (error) {
    console.error('Fetch hamlets error:', error);
    hamlets = HAMLETS_DATA;
}

const categories = [
    { icon: Globe, label: "Giới thiệu", color: "bg-blue-500" },
    { icon: Building2, label: "Bộ máy", color: "bg-indigo-500" },
    { icon: Newspaper, label: "Tin tức", color: "bg-purple-500" },
    { icon: Calendar, label: "Sự kiện", color: "bg-pink-500" },
    { icon: ShieldCheck, label: "TTHC", color: "bg-emerald-500" },
    { icon: MapPin, label: "Bản đồ", color: "bg-amber-500" },
];
---

<div class="min-h-screen">
    {/* Hero Section */}
    <section class="relative min-h-[85vh] flex items-center justify-center overflow-hidden bg-gradient-to-br from-slate-50 via-blue-50 to-indigo-50">
        <div class="absolute inset-0 overflow-hidden">
            <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-primary/10 rounded-full blur-3xl animate-pulse"></div>
            <div class="absolute bottom-1/4 right-1/4 w-[500px] h-[500px] bg-indigo-500/10 rounded-full blur-3xl animate-pulse delay-1000"></div>
            <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] bg-violet-500/5 rounded-full blur-3xl"></div>
        </div>

        <div class="absolute inset-0 bg-[linear-gradient(to_right,#8882_1px,transparent_1px),linear-gradient(to_bottom,#8882_1px,transparent_1px)] bg-[size:40px_40px] opacity-30"></div>

        <div class="container mx-auto px-4 relative z-10 pt-24 pb-16">
            <div class="max-w-4xl mx-auto text-center">
                <div class="hero-animate inline-flex items-center gap-2 px-4 py-2 rounded-full bg-white/80 backdrop-blur-sm text-sm font-bold text-primary shadow-lg border border-white/50 mb-8 opacity-0 translate-y-4 transition-all duration-700">
                    <Sparkles size={16} class="text-amber-500" />
                    Cổng thông tin điện tử
                </div>

                <h1 class="hero-animate text-5xl md:text-7xl font-black text-slate-900 mb-6 tracking-tight leading-tight opacity-0 translate-y-4 transition-all duration-700 delay-100">
                    Xã <span class="text-transparent bg-clip-text bg-gradient-to-r from-primary to-indigo-600">Ba Sao</span>
                </h1>

                <p class="hero-animate text-xl md:text-2xl text-slate-600 mb-10 max-w-2xl mx-auto font-medium leading-relaxed opacity-0 translate-y-4 transition-all duration-700 delay-200">
                    Huyện Cao Lãnh - Tỉnh Đồng Tháp
                </p>

                {/* Search Bar */}
                <div class="hero-animate relative max-w-xl mx-auto mb-12 opacity-0 translate-y-4 transition-all duration-700 delay-300">
                    <div class="relative group">
                        <input
                            id="hamlet-search"
                            type="text"
                            placeholder="Tìm kiếm thông tin ấp..."
                            class="w-full px-6 py-4 pl-14 rounded-2xl border-2 border-slate-200/50 bg-white/80 backdrop-blur-sm focus:border-primary focus:ring-4 focus:ring-primary/10 transition-all text-lg shadow-xl shadow-slate-200/50 outline-none"
                        />
                        <Search class="absolute left-5 top-1/2 -translate-y-1/2 text-slate-400 group-focus-within:text-primary transition-colors" size={22} />
                    </div>
                </div>

                {/* Quick Category Links */}
                <div class="hero-animate flex flex-wrap justify-center gap-3 md:gap-4 opacity-0 translate-y-4 transition-all duration-700 delay-400">
                    {categories.map((cat) => (
                        <button
                            class="category-btn flex items-center gap-2 px-5 py-2.5 rounded-xl text-sm font-bold transition-all duration-300 shadow-lg hover:-translate-y-1 hover:shadow-xl active:translate-y-0 bg-white text-slate-700 hover:bg-slate-50 border border-slate-100"
                            data-category={cat.label}
                            data-color={cat.color}
                        >
                            <cat.icon size={16} />
                            {cat.label}
                        </button>
                    ))}
                </div>
            </div>
        </div>

        <div class="absolute bottom-0 left-0 right-0">
            <svg viewBox="0 0 1440 100" fill="none" class="w-full">
                <path d="M0 50L48 45.7C96 41 192 32 288 29.3C384 27 480 31 576 40.3C672 50 768 65 864 68.3C960 72 1056 63 1152 53.7C1248 45 1344 36 1392 31.8L1440 28V100H1392C1344 100 1248 100 1152 100C1056 100 960 100 864 100C768 100 672 100 576 100C480 100 384 100 288 100C192 100 96 100 48 100H0V50Z" fill="white" />
            </svg>
        </div>
    </section>

    {/* Hamlets Grid Section */}
    <section class="py-20 bg-white">
        <div class="container mx-auto px-4">
            <div class="flex items-center justify-between mb-12">
                <div>
                    <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-primary/10 text-primary text-xs font-bold uppercase tracking-wider mb-3">
                        <LayoutGrid size={12} /> Danh sách các ấp
                    </div>
                    <h2 class="text-3xl md:text-4xl font-black text-slate-900 tracking-tight">
                        Tổng quan <span id="hamlet-count">{hamlets.length}</span> Ấp
                    </h2>
                </div>
                <a href="/to-chuc-bo-may" class="hidden md:flex items-center gap-2 text-sm font-bold text-primary hover:text-primary/80 transition-colors group">
                    Xem tổ chức bộ máy <ArrowRight size={16} class="group-hover:translate-x-1 transition-transform" />
                </a>
            </div>

            {/* Map Container - Hidden by default, shown when Category is "Bản đồ" */}
            <div id="map-section" class="hidden mb-12 h-[600px] w-full rounded-2xl overflow-hidden border border-slate-200 shadow-lg relative bg-slate-100">
                <div id="map" class="w-full h-full"></div>
            </div>

            {/* Hamlets Cards Grid */}
            <div id="hamlets-grid" class="grid md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
                {hamlets.map((hamlet, idx) => (
                    <a
                        href={`/ap/${hamlet.id}`}
                        class={cn(
                            "hamlet-card group relative bg-slate-50 rounded-2xl p-6 border border-slate-100 hover:border-primary/20 transition-all duration-300 hover:shadow-xl hover:shadow-primary/5 flex flex-col opacity-0 translate-y-4",
                            hamlet.isSpotlight && "bg-gradient-to-br from-amber-50 to-orange-50 border-amber-200/50"
                        )}
                        data-name={hamlet.name}
                        data-desc={hamlet.description}
                        style={`transition-delay: ${600 + idx * 80}ms`}
                    >
                        {hamlet.isSpotlight && (
                            <div class="absolute top-3 right-3 px-2 py-1 rounded-full bg-amber-500 text-white text-[10px] font-bold uppercase shadow-lg shadow-amber-500/25">
                                Tiêu điểm
                            </div>
                        )}
                        <div class={cn(
                            "w-14 h-14 rounded-xl flex items-center justify-center text-xl font-black mb-4 shadow-lg transition-transform duration-300 group-hover:scale-110",
                            hamlet.isSpotlight
                                ? "bg-gradient-to-br from-amber-500 to-orange-500 text-white shadow-amber-500/25"
                                : "bg-gradient-to-br from-primary to-indigo-600 text-white shadow-primary/25"
                        )}>
                            {hamlet.shortName}
                        </div>
                        <h3 class="text-xl font-bold text-slate-900 mb-2 group-hover:text-primary transition-colors">{hamlet.name}</h3>
                        <p class="text-sm text-slate-600 line-clamp-2 flex-1">{hamlet.description}</p>
                        <div class="flex items-center gap-2 mt-4 pt-4 border-t border-slate-100">
                            <Users size={14} class="text-slate-400" />
                            <span class="text-xs font-bold text-slate-400">{hamlet.leaders?.length || 0} lãnh đạo</span>
                        </div>
                    </a>
                ))}
            </div>
            
            <div id="no-results" class="hidden py-20 text-center">
                <p class="text-slate-500 text-lg">Không tìm thấy ấp nào phù hợp với từ khóa này.</p>
            </div>
        </div>
    </section>
</div>

{/* Pass hamlets data to client-side script for search and map */}
<script is:inline define:vars={{ hamletsData: hamlets }}>
    window.HAMLETS_DATA = hamletsData;
</script>

<script>
    import maplibregl from 'maplibre-gl';
    import 'maplibre-gl/dist/maplibre-gl.css';

    // Animation on load
    document.addEventListener('DOMContentLoaded', () => {
        const animElements = document.querySelectorAll('.hero-animate');
        animElements.forEach(el => {
            el.classList.remove('opacity-0', 'translate-y-4');
            el.classList.add('opacity-100', 'translate-y-0');
        });

        const cards = document.querySelectorAll('.hamlet-card');
        cards.forEach(card => {
            card.classList.remove('opacity-0', 'translate-y-4');
            card.classList.add('opacity-100', 'translate-y-0');
        });
    });

    const searchInput = document.getElementById('hamlet-search') as HTMLInputElement;
    const cardsGrid = document.getElementById('hamlets-grid');
    const noResults = document.getElementById('no-results');
    const hamletCount = document.getElementById('hamlet-count');
    const catBtns = document.querySelectorAll('.category-btn');
    const mapSection = document.getElementById('map-section');
    
    // Search functionality
    searchInput?.addEventListener('input', (e) => {
        const term = (e.target as HTMLInputElement).value.toLowerCase();
        const cards = document.querySelectorAll('.hamlet-card');
        let visibleCount = 0;

        cards.forEach(card => {
            const name = (card as HTMLElement).dataset.name?.toLowerCase() || '';
            const desc = (card as HTMLElement).dataset.desc?.toLowerCase() || '';
            
            if (name.includes(term) || desc.includes(term)) {
                (card as HTMLElement).classList.remove('hidden');
                visibleCount++;
            } else {
                (card as HTMLElement).classList.add('hidden');
            }
        });

        if (hamletCount) hamletCount.textContent = visibleCount.toString();
        
        if (visibleCount === 0) {
            noResults?.classList.remove('hidden');
            cardsGrid?.classList.add('hidden');
        } else {
            noResults?.classList.add('hidden');
            cardsGrid?.classList.remove('hidden');
        }
    });

    // Category filter & Map logic
    let map: any = null;

    catBtns.forEach(btn => {
        btn.addEventListener('click', () => {
            const category = (btn as HTMLElement).dataset.category;
            const color = (btn as HTMLElement).dataset.color;
            
            // UI state
            catBtns.forEach(b => {
                b.classList.remove('text-white', 'bg-blue-500', 'bg-indigo-500', 'bg-purple-500', 'bg-pink-500', 'bg-emerald-500', 'bg-amber-500');
                b.classList.add('bg-white', 'text-slate-700');
            });

            if (category === 'Bản đồ') {
                mapSection?.classList.remove('hidden');
                cardsGrid?.classList.add('hidden');
                btn.classList.remove('bg-white', 'text-slate-700');
                btn.classList.add(color!, 'text-white');

                // Initialize map if not exists
                if (!map) {
                    initMap();
                }
            } else {
                mapSection?.classList.add('hidden');
                cardsGrid?.classList.remove('hidden');
                btn.classList.remove('bg-white', 'text-slate-700');
                btn.classList.add(color!, 'text-white');
            }
        });
    });

    function initMap() {
        const MAP_STYLE = {
            version: 8,
            sources: {
                osm: {
                    type: 'raster',
                    tiles: ['https://tile.openstreetmap.org/{z}/{x}/{y}.png'],
                    tileSize: 256,
                    attribution: '&copy; OpenStreetMap Contributors',
                    maxzoom: 19
                }
            },
            layers: [
                {
                    id: 'osm',
                    type: 'raster',
                    source: 'osm'
                }
            ]
        };

        map = new maplibregl.Map({
            container: 'map',
            style: MAP_STYLE as any,
            center: [105.6793, 10.5364],
            zoom: 13
        });

        map.addControl(new maplibregl.NavigationControl());

        // Add Markers
        (window as any).HAMLETS_DATA.forEach((hamlet: any) => {
            const el = document.createElement('div');
            el.className = 'cursor-pointer group relative';
            const color = hamlet.isSpotlight ? '#f59e0b' : '#3b82f6';
            
            el.innerHTML = `
                <div class="absolute -bottom-1 left-1/2 -translate-x-1/2 w-4 h-1 bg-black/20 blur-sm rounded-full"></div>
                <svg width="40" height="40" viewBox="0 0 24 24" fill="${color}" stroke="${color}" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="drop-shadow-lg transition-transform duration-300 hover:-translate-y-2">
                    <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                    <circle cx="12" cy="10" r="3" fill="white"></circle>
                </svg>
                <div class="absolute -top-10 left-1/2 -translate-x-1/2 bg-white px-3 py-1.5 rounded-lg shadow-lg opacity-0 group-hover:opacity-100 transition-opacity whitespace-nowrap text-sm font-bold text-slate-900 pointer-events-none">
                    ${hamlet.shortName}
                </div>
            `;

            const marker = new maplibregl.Marker(el)
                .setLngLat([hamlet.location?.lng || 105.6793, hamlet.location?.lat || 10.5364])
                .addTo(map);

            const popup = new maplibregl.Popup({ offset: 25 })
                .setHTML(`
                    <div class="p-1 min-w-[200px]">
                        <div class="flex items-center gap-3 mb-3">
                            <div class="w-10 h-10 rounded-lg flex items-center justify-center text-lg font-black text-white shadow-md ${hamlet.isSpotlight ? 'bg-amber-500' : 'bg-primary'}">
                                ${hamlet.shortName}
                            </div>
                            <div>
                                <h3 class="font-bold text-slate-900">${hamlet.name}</h3>
                                ${hamlet.isSpotlight ? '<span class="text-[10px] font-bold text-amber-500 uppercase">Tiêu điểm</span>' : ''}
                            </div>
                        </div>
                        <a href="/ap/${hamlet.id}" class="block w-full py-2 bg-slate-900 text-white text-center rounded-lg text-sm font-bold hover:bg-slate-800 transition-colors">
                            Xem chi tiết
                        </a>
                    </div>
                `);

            el.addEventListener('click', () => {
                marker.togglePopup();
            });
            
            marker.setPopup(popup);
        });
    }
</script>

<style>
    /* Mimic Lucide colors since we are using plain SVG in map markers */
    .text-primary { color: #3b82f6; }
    .bg-primary { background-color: #3b82f6; }
</style>
